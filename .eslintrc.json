{
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "jest": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "plugins": ["jest"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": "error",
        "semi": [2, "always"],
        "indent": ["error", 4],
        "no-tabs": "off",
        "curly": ["error", "multi-or-nest"],
        "no-console": "off",
        "no-unused-vars": "off",
        "space-before-function-paren": "error",
        "no-process-env": "off"
    }
}